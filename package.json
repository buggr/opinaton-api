    "express": "^4.17.1",
    "express-boom": "^3.0.0",
    "mongoose": "^5.7.1",
    "pm2": "^3.5.1",
    "saslprep": "^1.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-things": "^0.2.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1"
  }
